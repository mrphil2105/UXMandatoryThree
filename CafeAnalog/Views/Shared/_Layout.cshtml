@using CafeAnalog.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> _signInManager

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Caf&#x00e9; Analog</title>

    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,700;0,900;1,400&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" />
</head>
<body>

<div id="top">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-7 d-flex align-items-center">
                <div>
                    <a class="top-heading" asp-controller="Home" asp-action="Index">Caf&#x00e9; Analog</a>
                    <span class="open-status">&Oslash;pen</span>
                </div>
                <div class="top-menu">
                    <ul>
                        <li>
                            <a asp-controller="Shop" asp-action="Index">
                                <i class="fa-solid fa-basket-shopping"></i>
                                Shop
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Inventory" asp-action="Index">
                                <i class="fa-solid fa-ticket"></i>
                                Inventory
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Leaderboard">
                                <i class="fa-solid fa-ranking-star"></i>
                                Leaderboard
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3 col-5 d-flex align-items-center justify-content-end">
                @if (_signInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="btn btn-secondary">Log out</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Log in</a>
                }
            </div>
        </div>
    </div>
</div>

<main>
    @RenderBody()
</main>

<div class="bottom-menu">
    <ul>
        <li>
            <a asp-controller="Shop" asp-action="Index">
                <i class="fa-solid fa-basket-shopping"></i>
            </a>
        </li>
        <li>
            <a asp-controller="Inventory" asp-action="Index">
                <i class="fa-solid fa-ticket"></i>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-ranking-star"></i>
            </a>
        </li>
    </ul>
</div>

<footer>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-4 col-sm-6 col-12">
                <h5>Address</h5>
                <div class="mb-1">
                    <span>Caf&#x00e9; Analog</span>
                </div>
                <div class="mb-1">
                    <span>IT University of Copenhagen</span>
                </div>
                <div class="mb-1">
                    <span>Rued Langgaards Vej 7</span>
                </div>
                <div class="mb-1">
                    <span>2300 K&oslash;benhavn S</span>
                </div>
                <div class="mb-2">
                    <span>CVR: DK-34657343</span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-12">
                <h5>Contact</h5>
                <div class="mb-2">
                    <span>Email: <a href="mailto:analog@cafeanalog.dk">analog@cafeanalog.dk</a></span>
                </div>
                <div class="mb-2">
                    <a href="https://www.facebook.com/cafeanalog">
                        <i class="fa-brands fa-facebook-square"></i>
                    </a>
                    <a href="https://www.instagram.com/cafeanalog">
                        <i class="fa-brands fa-instagram-square"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <small>&copy; 2022 Caf&#x00e9; Analog</small>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha512-pax4MlgXjHEPfCwcJLQhigY7+N8rt6bVvWLFyUMuxShv170X53TRzGPmPkZmGBhk+jikR8WBM4yl7A9WMHHqvg==" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", false)

</body>
</html>
