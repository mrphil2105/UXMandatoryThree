@model List<RankingModel>

@{
    ViewData["Title"] = "Leaderboard";
}
<div class="leaderboard">
    <h1 class="leaderboard-heading">Leaderboard</h1>
    <div class="container">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="ranking">
                <span>#@(i + 1) &nbsp; @Model[i].FirstName @Model[i].LastName</span>
                <span>@Model[i].Score</span>
            </div>
        }
    </div>
</div>
